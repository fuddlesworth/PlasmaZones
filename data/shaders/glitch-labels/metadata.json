{
    "id": "glitch-labels",
    "name": "Glitch Labels",
    "description": "Minimalist zones with digital glitch effect on zone numbers: slice displacement and scan lines, no chromatic aberration",
    "author": "PlasmaZones",
    "version": "1.0",
    "fragmentShader": "effect.frag",
    "vertexShader": "zone.vert",
    "parameters": [
        {
            "id": "fillOpacity",
            "name": "Card Opacity",
            "type": "float",
            "slot": 0,
            "default": 0.85,
            "min": 0.4,
            "max": 0.95
        },
        {
            "id": "borderWidth",
            "name": "Border Width",
            "type": "float",
            "slot": 1,
            "default": 2.0,
            "min": 1.0,
            "max": 4.0
